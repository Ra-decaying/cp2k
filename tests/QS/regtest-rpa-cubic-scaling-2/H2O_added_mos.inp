&GLOBAL
  PROJECT  H2O
  PRINT_LEVEL MEDIUM
  RUN_TYPE DEBUG
&END GLOBAL
&DEBUG 
   DEBUG_FORCES .TRUE.
   DEBUG_STRESS_TENSOR .FALSE.
   DEBUG_DIPOLE .FALSE.
   CHECK_ATOM_FORCE  1 Z
   DEBUG_POLARIZABILITY .FALSE.
&END DEBUG
&FORCE_EVAL
  METHOD Quickstep
  &DFT
    BASIS_SET_FILE_NAME  HFX_BASIS
    SORT_BASIS EXP
    POTENTIAL_FILE_NAME  POTENTIAL
    &MGRID
      CUTOFF  250
      REL_CUTOFF  60
    &END MGRID
    &POISSON
      PERIODIC NONE
      POISSON_SOLVER MT
    &END POISSON
    &QS
      METHOD GPW
    &END QS
    &SCF
      SCF_GUESS ATOMIC
      EPS_SCF 1.0E-7
      MAX_SCF 100
      ADDED_MOS 10
    &END SCF
    &XC
      # RPA@PBE
      &XC_FUNCTIONAL PBE
      &END XC_FUNCTIONAL 
      &WF_CORRELATION
        &RI_RPA
          QUADRATURE_POINTS  3
          &HF
            FRACTION 1.0000000
            &SCREENING
              EPS_SCHWARZ 1.0E-8
            &END SCREENING
          &END HF 
        &END
        &LOW_SCALING
          MEMORY_CUT 2
        &END
        &INTEGRALS
          ERI_METHOD OS
        &END INTEGRALS
        &RI
          &RI_METRIC
            POTENTIAL_TYPE IDENTITY
          &END
        &END RI
      &END
    &END XC
  &END DFT
  &SUBSYS
    &CELL
      ABC [angstrom]  6.000   6.000  6.000
      PERIODIC NONE
    &END CELL
    &KIND H
      BASIS_SET  DZVP-GTH
      BASIS_SET RI_AUX  RI_DZVP-GTH
      POTENTIAL  GTH-HF-q1
    &END KIND
    &KIND O
      BASIS_SET  DZVP-GTH
      BASIS_SET RI_AUX  RI_DZVP-GTH
      POTENTIAL  GTH-HF-q6
    &END KIND
    &TOPOLOGY
      COORD_FILE_NAME  H2O_gas.xyz
      COORD_FILE_FORMAT xyz
      &CENTER_COORDINATES
      &END
    &END TOPOLOGY
  &END SUBSYS
&END FORCE_EVAL
